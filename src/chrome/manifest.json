{
	"name": "Zotero Connector",
	"manifest_version": 2,
	"version": "3.0.3",
	"description": "Saves references to Zotero from Chrome and Opera",
	"browser_action": {
		"default_icon": "images/treeitem-webpage-gray.png",
		"default_title": "Save to Zotero"
	},
	"permissions": ["http://*/*", "https://*/*", "tabs", "contextMenus", "cookies"],
	"background": {
		"scripts": [
			/*BACKGROUND SCRIPTS*/
			"background.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [
				/*INJECT SCRIPTS*/
			],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		/*WEB ACCESSIBLE RESOURCES*/
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"homepage_url": "https://www.zotero.org/",
	"icons": {
		"16": "Icon-16.png",
		"48": "Icon-48.png",
		"128": "Icon-128.png"
	},
	"options_page": "preferences/preferences.html",
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+S"
			}
		}
	},
	"applications": {
		"gecko": {
			"id": "zotero@chnm.gmu.edu"
		}
	}
}